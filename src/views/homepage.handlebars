<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/post/{{id}}">{{this.title}}</a>
    </h2>
   
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
     <h3>Comments</h3>
    {{#if this.comments}}
      <ul>
        {{#each this.comments}}
          <li>
            <p>{{this.text}}</p>
            <small>By {{this.user.name}} on {{format_date this.date_created}}</small>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments yet.</p>
    {{/if}}
  </div>
  <div class="col-md-7">
    <p>
      {{post.text}}
    </p>
  </div>
  
</div>
{{/each}}


